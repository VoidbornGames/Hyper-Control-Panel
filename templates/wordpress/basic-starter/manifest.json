{
  "name": "Basic WordPress Starter",
  "description": "A clean and minimal WordPress starter site perfect for blogs and small business websites",
  "version": "1.0.0",
  "platform": "wordpress",
  "category": "blog",
  "tags": ["blog", "business", "minimal", "responsive"],
  "author": "Hyper Control Panel",
  "homepage": "https://hypercontrolpanel.com",
  "requirements": {
    "php": ">=7.4",
    "wordpress": ">=6.0",
    "mysql": ">=5.7"
