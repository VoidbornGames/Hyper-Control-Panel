# Database Configuration
POSTGRES_DB=hypercontrolpanel
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432

# MySQL for Site Databases
MYSQL_ROOT_PASSWORD=your_mysql_root_password
MYSQL_HOST=mysql
MYSQL_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Control Panel Configuration
CONTROL_PANEL_URL=http://localhost:3000
API_URL=http://localhost:5000
API_PORT=5000

# Domain Configuration
DEFAULT_DOMAIN=localhost
WILDCARD_SSL_CERT_PATH=/etc/ssl/certs/wildcard.crt
WILDCARD_SSL_KEY_PATH=/etc/ssl/private/wildcard.key

# Email Configuration (for SSL notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# File Storage Configuration
SITES_ROOT_DIR=/var/www/sites
BACKUP_DIR=/var/backups/hypercontrolpanel
MAX_STORAGE_PER_SITE_GB=10

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
SITE_CONTAINER_NETWORK=hypercontrol-sites

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENABLE_HTTPS=false

# Monitoring and Logging
LOG_LEVEL=Information
ENABLE_TELEMETRY=false