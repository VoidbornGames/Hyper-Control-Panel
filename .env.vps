# Database Configuration (Non-conflicting ports)
POSTGRES_DB=hypercontrolpanel
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_CHANGE_THIS
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432

# MySQL for Site Databases (Non-conflicting)
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password_CHANGE_THIS
MYSQL_HOST=mysql
MYSQL_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_CHANGE_THIS
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7

# Redis Configuration (Non-conflicting)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_CHANGE_THIS

# Control Panel Configuration (VPS - Use your actual IP or domain)
CONTROL_PANEL_URL=http://YOUR_VPS_IP:8080
API_URL=http://YOUR_VPS_IP:5050
API_PORT=5050
FRONTEND_URL=http://YOUR_VPS_IP:8080

# Domain Configuration
DEFAULT_DOMAIN=YOUR_VPS_IP
WILDCARD_SSL_CERT_PATH=/etc/ssl/certs/wildcard.crt
WILDCARD_SSL_KEY_PATH=/etc/ssl/private/wildcard.key

# Email Configuration (for SSL notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# File Storage Configuration (Separate from Pterodactyl)
SITES_ROOT_DIR=/var/www/hypercontrol-sites
BACKUP_DIR=/var/backups/hypercontrolpanel
MAX_STORAGE_PER_SITE_GB=10

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
SITE_CONTAINER_NETWORK=hypercontrol-sites

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENABLE_HTTPS=false

# Monitoring and Logging
LOG_LEVEL=Information
ENABLE_TELEMETRY=false

# Network Configuration (Avoid conflicts with Pterodactyl networks)
NETWORK_SUBNET=172.21.0.0/16
NETWORK_NAME=hypercontrol-br0