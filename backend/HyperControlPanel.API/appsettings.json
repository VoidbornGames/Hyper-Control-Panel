{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgresql;Database=hypercontrolpanel;Username=postgres;Password=your_postgres_password",
    "MySqlConnection": "Server=mysql;Database=site_databases;Uid=root;Pwd=your_mysql_root_password"
  },
  "Jwt": {
    "Issuer": "HyperControlPanel",
    "Audience": "HyperControlPanelUsers",
    "Key": "your_super_secret_jwt_key_at_least_32_characters_long_for_security",
    "ExpiryHours": 24,
    "RefreshExpiryDays": 7
  },
  "Frontend": {
    "Url": "http://localhost:3000"
  },
  "Redis": {
    "Host": "redis",
    "Port": 6379,
    "Password": "your_redis_password"
  },
  "Docker": {
    "Host": "unix:///var/run/docker.sock",
    "Network": "hypercontrol-sites"
  },
  "Storage": {
    "SitesRoot": "/var/www/sites",
    "BackupRoot": "/var/backups/hypercontrolpanel",
    "MaxStoragePerSiteGB": 10
  },
  "Domain": {
    "DefaultDomain": "localhost",
    "WildcardSslCertPath": "/etc/ssl/certs/wildcard.crt",
    "WildcardSslKeyPath": "/etc/ssl/private/wildcard.key"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "your_email@gmail.com",
    "Password": "your_app_password",
    "FromEmail": "noreply@yourdomain.com"
  },
  "Security": {
    "BcryptRounds": 12,
    "RateLimitRequestsPerMinute": 100,
    "EnableHttps": false
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.PostgreSQL"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/hypercontrol-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}